<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".LOGIN">

    <LinearLayout
        style="@style/GroupView"
        android:layout_width="match_parent"
        android:layout_marginTop="160dp"
        android:background="#424242"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            style="@style/Image"
            android:src="@drawable/email_icon" />

        <EditText
            style="@style/EditText"
            android:text="Email Adress" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:orientation="horizontal">

        <LinearLayout
            style="@style/GroupView1"
            android:layout_width="163dp"
            android:layout_marginLeft="25dp"
            android:background="#424242"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                style="@style/Image"
                android:src="@drawable/password_key_icon" />

            <EditText
                style="@style/EditText"
                android:text="Passowrd" />
        </LinearLayout>

        <LinearLayout
            style="@style/GroupView1"
            android:layout_width="163dp"
            android:layout_marginLeft="5dp"

            android:background="#424242"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                style="@style/Image"
                android:src="@drawable/password_again_icon" />

            <EditText
                style="@style/EditText"
                android:text="Again" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        style="@style/GroupView"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="#424242"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView4"
            style="@style/Image"
            android:src="@drawable/mobile_number_icon" />

        <EditText
            style="@style/EditText"
            android:text="Mobile Number" />


    </LinearLayout>

    <RelativeLayout
        style="@style/GroupView"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Continue"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="25dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:text="Already have an Account ? sign in"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />
    </RelativeLayout>

</LinearLayout>